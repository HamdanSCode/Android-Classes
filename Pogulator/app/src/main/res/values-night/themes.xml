<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pogulator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="normbutton">@color/darkGrey</item>
        <item name="buttontext">@color/darkerWhite</item>
        <item name="operbutton">@color/darkGreen</item>
        <item name="equalbutton">@color/lightGreen</item>
        <item name="clearbutton">@color/lightBlue</item>
        <item name="padbackground">@color/darkBlack</item>
        <item name="numberbackground">@color/darkerGrey</item>
        <item name="backColor">@color/darkGrey</item>
        <item name="outputColor">@color/white</item>
        <item name="specialRipple">@color/black</item>
        <item name="normButtonRipple">@color/lightBlue</item>
        <item name="operRipple">@color/lightGreen</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="normButton">
        <item name="android:text">test</item>
        <item name="android:textColor">?buttontext</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/marginButton</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/paddingButton</item>
        <item name="android:background">@drawable/normal_ripple</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
    </style>
    <!--        <item name="cornerRadius">24dp</item>-->
<!--    <item name="android:paddingStart">16dp</item>-->

    <style name="buttonRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:layout_weight">1</item>-->
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">top</item>
    </style>

</resources>